<resources>

    <style name="AppThemeWithoutActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        (or)
        <!--     <item name="android:actionModeBackground">@android:color/holo_green_light</item>-->
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppThemeWithActionBar" parent="android:Theme.Material.Light">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:editTextColor">@color/textColor</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <!--  <item name="actionModeBackground">@android:color/holo_purple</item> (or)-->
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppThemeMinWidth" parent="android:Theme.Material.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:editTextColor">@color/textColor</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="dialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>